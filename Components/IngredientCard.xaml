<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoRecetas.Components.IngredientCard"
             Padding="10"
             BackgroundColor="White">
    
    <Frame BorderColor="#D3D3D3" CornerRadius="10" HasShadow="True">
        <StackLayout Orientation="Horizontal" Padding="5">
            <!-- Nombre del ingrediente -->
            <Label Text="Ingrediente" Margin="5, 0"/>

            <!-- Cantidad -->
            <Label Text="Cantidad" Margin="5, 0"/>

            <!-- F.C. -->
            <Label Text="Fecha Caducidad" Margin="5, 0"/>
        </StackLayout>
    </Frame>
</ContentView>
