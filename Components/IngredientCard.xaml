<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoRecetas.Components.IngredientCard"
             Padding="10"
             BackgroundColor="White"
             Margin="10">
    
    <Frame BorderColor="#D3D3D3" CornerRadius="10" HasShadow="True">
        <StackLayout Orientation="Horizontal" Padding="10">
            <!-- Nombre del ingrediente -->
            <Entry Placeholder="Name" WidthRequest="150" />

            <!-- Cantidad -->
            <Entry Placeholder="Cantidad" WidthRequest="100" />

            <!-- F.C. -->
            <Entry Placeholder="F.C." WidthRequest="100" />

            <!-- Punto de elipsis (...) -->
            <Label Text="..." VerticalOptions="Center" />

        </StackLayout>
    </Frame>
</ContentView>
