<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoRecetas.Components.RecipeCard">
    <Frame BackgroundColor="#FFFFFF" CornerRadius="10" Padding="10">
        <StackLayout>
            <Frame BackgroundColor="#6CA96C" Padding="5" CornerRadius="5">
                <Label x:Name="RecipeTitle" 
                       Text="Título de la receta" 
                       TextColor="White" 
                       FontAttributes="Bold" 
                       FontSize="16" />
            </Frame>
            <Label x:Name="RecipeSteps" 
                   Text="Descripción: Lorem Ipsum blablabla" 
                   FontSize="14" 
                   TextColor="Gray" />
        </StackLayout>
    </Frame>
</ContentView>