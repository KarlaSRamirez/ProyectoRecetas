<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoRecetas.Components.RecipeCard">
    <Frame BackgroundColor="#FFFFFF" CornerRadius="10" Padding="10">
        <StackLayout>
            <Frame BackgroundColor="#A0D8A4" Padding="5" CornerRadius="5">
                <Label x:Name="RecipeTitle" 
                       Text="Título de la receta" 
                       TextColor="Black" 
                       FontAttributes="Bold" 
                       FontSize="16" />
            </Frame>
            <Label x:Name="RecipeIngredients" 
               Text="Descripción: Lorem Ipsum blablabla" 
               FontSize="14"
               Margin="0,10"
               TextColor="Black" />
            <Button BackgroundColor="#41B149" Text="Cocinar" WidthRequest="100" Clicked="CookButton"/>
        </StackLayout>
    </Frame>
</ContentView>