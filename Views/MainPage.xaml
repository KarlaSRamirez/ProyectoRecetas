<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoRecetas.Views.MainPage"
             Title="Main Page">
    <VerticalStackLayout Padding="20">
        <Label 
            Text="Bienvenido a la aplicaciÃ³n de recetas"
            FontSize="24"
            HorizontalOptions="Center"
            VerticalOptions="Start" />

        <Image 
            Source="logo.png"
            WidthRequest="150"
            HeightRequest="150"
            HorizontalOptions="Center" />

        <Label 
            Text="Encuentra tus recetas favoritas y aprende a cocinar con facilidad."
            FontSize="18"
            HorizontalOptions="Center"
            VerticalOptions="StartAndExpand" />

        <Button 
            Text="Comenzar"
            FontSize="18"
            BackgroundColor="LightBlue"
            TextColor="White"
            VerticalOptions="End"
            HorizontalOptions="Center" 
            Clicked="OnStartButtonClicked"/>

        <Button 
            Text="Ir a Recetas"
            FontSize="18"
            BackgroundColor="LightBlue"
            TextColor="White"
            VerticalOptions="End"
            HorizontalOptions="Center" 
            Clicked="OnNavigateButtonClicked"/>
    </VerticalStackLayout>
</ContentPage>
