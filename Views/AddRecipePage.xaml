<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoRecetas.Views.AddRecipePage"
             Title="AddRecipePage">
    
    <Frame BackgroundColor="#E0E0E0"
       CornerRadius="20"
       Padding="20,30"
       Margin="20"
       HasShadow="True"
       WidthRequest="250"
       HeightRequest="550">
        
        <StackLayout>
            
            <Label Text="New Ingredient" HorizontalTextAlignment="Center" FontSize="Large"></Label>
            <Label Text="Name"></Label>
            <Entry Background="White" ></Entry>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,20">

                <StackLayout Margin="10,0">
                    <Label Text="Cantidad"></Label>
                    <Entry Background="White"></Entry>
                </StackLayout>

                <StackLayout>
                    <Label Text="Fecha Caducidad"></Label>
                    <Entry Background="White"></Entry>
                </StackLayout>

            </StackLayout>
            <Label Text="Descripcion"></Label>
            <Editor Background="White" HeightRequest="200" Margin="0,10"></Editor>
            <Button BackgroundColor="Green"
                    Text="Agregar"/>

        </StackLayout>
    </Frame>
</ContentPage>