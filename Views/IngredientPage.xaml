<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:ProyectoRecetas.Components"
             x:Class="ProyectoRecetas.Views.IngredientPage"
             Title="Tus Ingredientes"
             Padding="20"
             BackgroundColor="White">

    <AbsoluteLayout>

        <!-- Lista de tarjetas de ingredientes -->
        <ScrollView 
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All">
            <StackLayout>
                <components:IngredientCard />
                <components:IngredientCard />
                <components:IngredientCard />
                <components:IngredientCard />
                <components:IngredientCard />
                <components:IngredientCard />
                <components:IngredientCard />
                <components:IngredientCard />
            </StackLayout>
        </ScrollView>

        <!-- BotÃ³n flotante para agregar ingredientes -->
        <Button
            Text="+"
            CornerRadius="100"
            BackgroundColor="#41B149"
            TextColor="White"
            AbsoluteLayout.LayoutBounds="0.5,0.72"
            AbsoluteLayout.LayoutFlags="All"
            WidthRequest="75"
            HeightRequest="75"
            Clicked="OnNavigateButtonClicked"/>
    </AbsoluteLayout>
</ContentPage>