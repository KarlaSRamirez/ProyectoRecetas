<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:ProyectoRecetas.Components"
             x:Class="ProyectoRecetas.Views.RecetasPage"
             Title="Recetas">

    <AbsoluteLayout>
        <!-- Contenido principal con Scroll -->
        <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All"
                    Padding="0,0,0,100">
            <StackLayout x:Name="RecetasContainer" Padding="20" Spacing="20">
                <Button Text="+"
                    FontSize="35"
                    CornerRadius="20"
                    BorderColor="Gray"
                    BorderWidth="1"
                    BackgroundColor="LightGray"
                    TextColor="Gray"
                    WidthRequest="350"
                    HeightRequest="100" 
                    Clicked="OnAddButton"/>
            </StackLayout>
        </ScrollView>

        <!-- BotÃ³n fijo -->
        <ImageButton Source="boton_ingredientes.png"
                CornerRadius="100"
                BackgroundColor="#41B149"
                AbsoluteLayout.LayoutBounds="0.68,0.71"
                AbsoluteLayout.LayoutFlags="All"
                WidthRequest="75"
                HeightRequest="75" 
                Clicked="OnNavigateButtonClicked"/>
    </AbsoluteLayout>

</ContentPage>